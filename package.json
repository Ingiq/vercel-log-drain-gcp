{
  "name": "vercel-log-drain-gcp",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsc",
    "start": "functions-framework --source=dist/ --target=vercelLogDrain --port=${PORT:-8080}",
    "dev": "npm run build && env-cmd npm start",
    "test:integration": "npx tsx scripts/test-integration.ts",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "deploy:core": "gcloud run deploy vercel-log-drain --source . --platform managed --region asia-southeast1 --allow-unauthenticated --set-env-vars VERCEL_VERIFICATION_KEY=\"$VERCEL_VERIFICATION_KEY\",VERCEL_LOG_DRAIN_SECRET=\"$VERCEL_LOG_DRAIN_SECRET\" --min-instances 1 --max-instances 10",
    "deploy": "env-cmd npm run deploy:core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ingiq/vercel-log-drain-gcp.git"
  },
  "author": "Tatsuo Nomura",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ingiq/vercel-log-drain-gcp/issues"
  },
  "homepage": "https://github.com/Ingiq/vercel-log-drain-gcp#readme",
  "description": "",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@google-cloud/logging": "^11.2.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  }
}
